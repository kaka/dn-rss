<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <TextView
      android:id="@+id/is_new"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:layout_marginLeft="0dp"
      android:layout_marginRight="0dp"
      android:text="@string/new_item"
      style="@style/Text.List.Tag"
      />

  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@id/is_new"
      android:layout_marginBottom="0dp"
      android:paddingBottom="@dimen/text_vertical_margin"
      android:text="Title\nsecond row"
      style="@style/Text.List"
      />

  <TextView
      android:id="@+id/time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignBottom="@id/title"
      android:layout_marginRight="@dimen/text_vertical_margin"
      android:text="Time ago"
      style="@style/Text.List.Time"
      />

</RelativeLayout>
