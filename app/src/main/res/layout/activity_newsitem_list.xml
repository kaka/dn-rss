<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="kaka.android.dn.NewsItemListActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <fragment
      android:id="@+id/newsitem_slideshow"
      android:name="kaka.android.dn.NewsItemSlideshowFragment"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="2"
      tools:layout="@layout/fragment_newsitem_slideshow"
      />

  <fragment
      android:id="@+id/newsitem_list"
      android:name="kaka.android.dn.NewsItemListFragment"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="5"
      tools:layout="@android:layout/list_content"
      />

</LinearLayout>
