<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Text" parent="android:TextAppearance">
    <item name="android:textColor">@color/gray_dark</item>
    <item name="android:layout_marginLeft">@dimen/text_horizontal_margin</item>
    <item name="android:layout_marginRight">@dimen/text_horizontal_margin</item>
    <item name="android:layout_marginTop">@dimen/text_vertical_margin</item>
    <item name="android:layout_marginBottom">@dimen/text_vertical_margin</item>
  </style>

  <style name="Text.List">
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:textSize">20sp</item>
    <item name="android:lines">2</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="Text.List.Time">
    <item name="android:fontFamily">sans-serif-normal</item>
    <item name="android:textSize">12sp</item>
    <item name="android:lines">1</item>
    <item name="android:gravity">end</item>
  </style>

  <style name="Text.DetailTitle">
    <item name="android:fontFamily">sans-serif-condensed</item>
    <item name="android:textSize">32sp</item>
  </style>

  <style name="Text.DetailDescription">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="Text.DetailDate">
    <item name="android:fontFamily">sans-serif-light</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textStyle">italic</item>
    <item name="android:gravity">end</item>
  </style>

  <style name="Button.DetailReadMore" parent="@android:style/Widget.Holo.Button.Borderless">
    <item name="android:textColor">@color/gray_dark</item>
    <item name="android:fontFamily">sans-serif-normal</item>
  </style>

</resources>
